<div class="mg-container">
  <div class="title-heading">
    <h1 class="h1-title">Take your product</h1>
    <p class="p-title">All products available now</p>
  </div>
  <!-- open model btn -->
  <div class="btn">
    <button class="btn-model"><i class="lni lni-plus"></i></button>
  </div>
  <!-- open and close model -->
    <div class="create-model hidden">
      <form method="post">
        <button class="closeModalBtn" type="submit" name="button">&times;</button>
        <div class="card-create">
          <form action="/" method="post">
              <label>title</label>
              <input type="text" name="title" placeholder="title" required>
              <label>description</label>
              <textarea name="description" id="" cols="60" rows="3" placeholder="type your description" required></textarea>
              <label>price</label>
              <input type="text" name="price" placeholder="price">
              <label>discountPercentage</label>
              <input type="text" name="discountPercentage" placeholder="discountPercentage" required>
              <label>rating</label>
              <input type="text" name="rating" placeholder="rating" required>
              <label>stock</label>
              <input type="text" name="stock" placeholder="stock" required>
              <label>brand</label>
              <input type="text" name="brand" placeholder="brand" required>
              <label>category</label>
              <input type="text" name="category" placeholder="category" required>
              <label>thumbnail</label>
              <input type="text" name="thumbnail" placeholder="thumbnail" required>
              <button type="submit">Crate Product</button>
          </form>
      </div>
    </div>
    <div class="overlay hidden"></div>
  <main class="main">
    <!-- all cards -->
    <div class="cards">
      <!-- card -->

      <% for(let i = 0; i < products.length; i++) { %>
      <div class="card">
        <div class="card-header">
          <div class="card-picture">
            <img class="img-card" src=<%=  products[i].thumbnail %> alt="img" />
          </div>
        </div>
        <!-- card details -->
        <div class="card-details">
            <h1 class="h1-card"><%= products[i].title %></h1>
            <p class="p-card"><%= products[i].description %></p>
            <div class="card-data">
              <h3>discount percentage: <span>-<%= products[i].discountPercentage %>%</span></h3>
            </div>
        </div>
        <!-- card footer -->
        <div class="card-footer">
          <p class="p-rating">
            <span><%= products[i].rating %></span>
            <span>rating</span>
          </p>
          <h3 class="h3-price"><%= products[i].price %>$</h3>
          <!-- <form class="form-view" action=<%= products[i]._id %> method="get"> -->
            <button class="sub-btn" type="submit">View more</button>
          <!-- </form> -->
        </div>
        </div>
      <% } %>
    </div>
  </main>
</div>